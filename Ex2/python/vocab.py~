import numpy as np
from collections import defaultdict
import cyvlfeat.kmeans as vf

from utils import *
from sift import *


def create_vocab_tree(folder):
    # read images
    imgs_g, _ = load_images(folder)

    # detect keypoints and compute descriptors
    kps, descs, num_kps = sift_detect_and_compute(imgs_g)

    # concatenate all descriptors and create dictionary to map
    # from descriptor number to the image index and keypoint index
    desc_arr, desc_to_kp = concatenate_descriptors(descs)

    # insert index at first column to keep track of key-point
    desc_arr = np.insert(desc_arr, 0, np.arange(desc_arr.shape[0]),axis=1)

    # fit the tree
    print(desc_arr.shape)
    vocab_tree, assignments = vf.hikmeans(desc_arr[1:,:].astype(np.uint8), 8, 4096)

    return assignments, imgs_g, vocab_tree, descs, desc_arr, desc_to_kp, kps, num_kps

    

            





    
    
